<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.AdminDetailDialogFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardElevation"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_libre"/>
            <EditText
                android:id="@+id/edNameAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:id="@+id/edAddressAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:id="@+id/edPhoneAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:layout_marginTop="15dp"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:id="@+id/edEmailAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/btnSabeAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saveAdmin"
                android:textStyle="bold"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>