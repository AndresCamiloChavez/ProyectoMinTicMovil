<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.AdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/textSizeTitle"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Mi perfil"/>
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/perfilround"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tvNameAdimin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/textSizePriceProduct"
                        android:text="Nombre"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tvAddressAdimin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/textSizePriceProduct"
                        android:text="Dirección"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tvPhoneAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Teléfono"
                        android:textSize="@dimen/textSizeContent"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/tvEmailAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Email"
                        android:textSize="@dimen/textSizeContent"/>
                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/editarDatos"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</FrameLayout>