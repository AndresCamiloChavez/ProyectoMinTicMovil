<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.agrolibre.view.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.agrolibre.view.ui.fragments.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_comentsFragment"
            app:destination="@id/comentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.agrolibre.view.ui.fragments.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" />
    <fragment
        android:id="@+id/comentsFragment"
        android:name="com.example.agrolibre.view.ui.fragments.ComentsFragment"
        android:label="fragment_coments"
        tools:layout="@layout/fragment_coments" >
        <action
            android:id="@+id/action_comentsFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
    </fragment>
    <dialog
        android:id="@+id/orderDetailFragmentDialog"
        android:name="com.example.agrolibre.view.ui.fragments.OrderDetailDialogFragment"
        android:label="OrderDetailFragmentDialog"
        tools:layout="@layout/fragment_order_detail_dialog"
        />
    <dialog
        android:id="@+id/navCommentsDetailFragmentDialog"
        android:name="com.example.agrolibre.view.ui.fragments.CommetsDetailDialogFragment"
        android:label="CommentsDetailFragmentDialog"
        tools:layout="@layout/fragment_commets_detail_dialog"
        />
    <dialog
        android:id="@+id/adminDetailFragmentDialog"
        android:name="com.example.agrolibre.view.ui.fragments.AdminDetailDialogFragment"
        android:label="AdminDetailFragmentDialog"
        tools:layout="@layout/fragment_admin_detail_dialog"
        />

</navigation>